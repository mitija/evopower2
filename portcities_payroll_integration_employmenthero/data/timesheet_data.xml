<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_reject_timesheet" model="ir.actions.server">
            <field name="name">Reject</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="type">ir.actions.server</field>
            <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_reject_timesheet()
            </field>
        </record>

        <record id="action_submit_timesheet" model="ir.actions.server">
            <field name="name">Submit</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_submit_timesheet()
            </field>
        </record>
    </data>
</odoo>
