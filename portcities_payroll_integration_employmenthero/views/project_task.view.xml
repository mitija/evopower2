<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="project_task_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <field name="date" position="before">
               <field name="id" invisible="1"/>
               <field name="is_sync_success" readonly="1"/>
               <field name="worktype_id" options="{'no_create': True, 'no_create_edit': True}" required="1"/>
            </field>
            <xpath expr="//field[@name='timesheet_ids']//form/sheet/group/field[@name='unit_amount']" position="after">
                <field name="keypay_timesheet_external_id"/>
            </xpath>
        </field>
    </record>
</odoo>
